update=st nokill update
htop=st htop
yazi=st yazi
sound=st pulsemixer
network=st impala
python=st python3
nvtop=st nvtop

# apps
steam
minecraft=prismlauncher
qbittorrent
gparted
darktable
tor=tor-browser
scrot=xfce4-screenshooter
mount=dmount
dmenu_run
st
firefox
private=firefox --private-window
xfce4-run=xfce4-appfinder -c

# dlaunch launchers
configure=dlaunch config "cd $XDG_CONFIG_HOME && st $EDITOR"

# configs
edit menu=st $EDITOR $XDG_CONFIG_HOME/dlaunch/root
edit configs=st $EDITOR $XDG_CONFIG_HOME/dlaunch/menu/config

# suckless
make dmenu=cd $XDG_CONFIG_HOME/dmenu && st nokill sudo make
make st=cd $XDG_CONFIG_HOME/st && st nokill sudo make

# xfce shortcuts
settings=xfce4-settings-manager
appearance=xfce4-appearance-settings
window=xfwm4-settings
keyboard=xfce4-keyboard-settings
mouse=xfce4-mouse-settings
panel=xfce4-panel --preferences
display=xfce4-display-settings
xfce4-taskmanager
desktop=xfdesktop-settings
